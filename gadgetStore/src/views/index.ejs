        </section>
    </main>
    <footer class="fluent-footer">
        <p>&copy; 2024 GadgetPedia</p>
    </footer>
    <script>
      // Fetch sample gadget data (replace with your actual data source or API)
    const gadgets = [
    {
      name: "Iphone 15 Pro Max",
      image: "https://www.apple.com/v/iphone/home/bt/images/overview/select/iphone_15_pro__bpnjhcrxofqu_xlarge_2x.png",
      description: "The latest smartphone with cutting-edge features.",
      price: 799.99,
    },
    {
      name: "Galaxy Book4 Pro",
      image: "https://images.samsung.com/is/image/samsung/p6pim/in/np960qgk-kg1in/gallery/in-galaxy-book4-pro-360-16-inch-np960-np960qgk-kg1in-539964872?$592_472_PNG$",
      description: "A powerful laptop for work and entertainment.",
      price: 1299.99,
    },
    // ... add more gadget objects
  ];
  
  // Function to display featured gadgets dynamically
  function displayFeaturedGadgets() {
    const gadgetList = document.querySelector('.gadget-list');
    gadgetList.innerHTML = ""; // Clear existing content
  
    gadgets.forEach((gadget) => {
      const gadgetItem = document.createElement('li');
      gadgetItem.classList.add('gadget');
  
      const gadgetImage = document.createElement('img');
      gadgetImage.src = gadget.image;
      gadgetItem.appendChild(gadgetImage);
  
      const gadgetDetails = document.createElement('div');
      gadgetDetails.classList.add('gadget-details');
  
      const gadgetTitle = document.createElement('h3');
      gadgetTitle.textContent = gadget.name;
      gadgetDetails.appendChild(gadgetTitle);
  
      const gadgetDescription = document.createElement('p');
      gadgetDescription.textContent = gadget.description;
      gadgetDetails.appendChild(gadgetDescription);
  
      const gadgetPrice = document.createElement('span');
      gadgetPrice.classList.add('price');
      gadgetPrice.textContent = `$${gadget.price.toFixed(2)}`;
      gadgetDetails.appendChild(gadgetPrice);
  
      gadgetItem.appendChild(gadgetDetails);
      gadgetList.appendChild(gadgetItem);
    });
  }

  // Call the displayFeaturedGadgets function on page load
  displayFeaturedGadgets();
  
  </script>
</body>
</html>



