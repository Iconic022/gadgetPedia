    <script>
        function toggleDetails(id) {
            const details = document.getElementById(id + "Details");
            const mobileCardsContainer = document.querySelector(".big-box");

                if (details.style.display === "flex") {
                    details.style.display = "none";
                    mobileCardsContainer.classList.remove("blur");
                } else {
                    details.style.display = "flex";
                    mobileCardsContainer.classList.add("blur");
                    details.style.zIndex = "101";
                    details.style.position = "fixed";
                }
        }

        function toggleBigBox(model) {
            const boxes = document.querySelectorAll('.big-box');
            boxes.forEach(box => {
                if (box.id === model + "Box") {
                    box.classList.toggle('active');
                } else {
                    box.classList.remove('active');
                }
            });
        }

        let slideIndex1 = 0;
        let slideIndex2 = 0;
        let slideIndex3 = 0;
        let slideIndex4 = 0;

        const slides1 = document.querySelectorAll('#slider1 img');
        const slides2 = document.querySelectorAll('#slider2 img');
        const slides3 = document.querySelectorAll('#slider3 img');
        const slides4 = document.querySelectorAll('#slider4 img');

        function showSlide1(n) {
            slides1.forEach(slide => slide.style.display = 'none');
            if (n >= slides1.length) {
                slideIndex1 = 0;
            } else if (n < 0) {
                slideIndex1 = slides1.length - 1;}
            slides1[slideIndex1].style.display = 'block';
        }

        function showSlide2(n) {
            slides2.forEach(slide => slide.style.display = 'none');
            if (n >= slides2.length) {
                slideIndex2 = 0;
            } else if (n < 0) {
                slideIndex2 = slides2.length - 1;
            }
            slides2[slideIndex2].style.display = 'block';
        }

        function showSlide3(n) {
            slides3.forEach(slide => slide.style.display = 'none');
            if (n >= slides3.length) {
                slideIndex3 = 0;
            } else if (n < 0) {
                slideIndex3 = slides3.length - 1;
            }
            slides3[slideIndex3].style.display = 'block';
        }

        function showSlide4(n) {
            slides4.forEach(slide => slide.style.display = 'none');
            if (n >= slides4.length) {
                slideIndex4 = 0;
            } else if (n < 0) {
                slideIndex4 = slides4.length - 1;
            }
            slides4[slideIndex4].style.display = 'block';
        }

        function nextSlide(slider) {
            if (slider === 1) {
                showSlide1(++slideIndex1);
            } else if (slider === 2) {
                showSlide2(++slideIndex2);
            } else if (slider === 3) {
                showSlide3(++slideIndex3);
            } else if (slider === 4) {
                showSlide4(++slideIndex4);
            }
        }

        function prevSlide(slider) {
            if (slider === 1) {
                showSlide1(--slideIndex1);
            } else if (slider === 2) {
                showSlide2(--slideIndex2);
            } else if (slider === 3) {
                showSlide3(--slideIndex3);
            } else if (slider === 4) {
                showSlide4(--slideIndex4);
            }
        }

        function showSlider(slider) {
            if (slider === 1) {
                document.getElementById('slider1').style.display = 'block';
                document.getElementById('slider2').style.display = 'none';
                document.getElementById('slider3').style.display = 'none';
                document.getElementById('slider4').style.display = 'none';
                document.getElementById('specs1').style.display = 'block';
                document.getElementById('specs2').style.display = 'none';
                document.getElementById('specs3').style.display = 'none';
                document.getElementById('specs4').style.display = 'none';
                showSlide1(slideIndex1);
            } else if (slider === 2) {
                document.getElementById('slider1').style.display = 'none';
                document.getElementById('slider2').style.display = 'block';
                document.getElementById('slider3').style.display = 'none';
                document.getElementById('slider4').style.display = 'none';
                document.getElementById('specs1').style.display = 'none';
                document.getElementById('specs2').style.display = 'block';
                document.getElementById('specs3').style.display = 'none';
                document.getElementById('specs4').style.display = 'none';
